@using Sitecore.Mvc.Presentation;

@model Capgemini.Demo.Project.Models.TestimonialModel

@if (Model != null)
{
    <div class="container-fluid bg-testimonial py-5">
        <div class="container py-5">
            <div class="row">
                <div class="col-lg-7 pt-lg-5 pb-5">
                    <h6 class="text-secondary font-weight-semi-bold text-uppercase mb-3">@Model.TestimonialTitle</h6>
                    <h1 class="section-title text-white mb-5">@Model.TestimonialSectionTitle</h1>
                    <div class="owl-carousel testimonial-carousel position-relative">
                        <div class="d-flex flex-column text-white">
                            <div class="d-flex align-items-center mb-3">                                
                                @Model.ClientImage
                                <div class="ml-3">
                                    <h5 class="text-primary">@Model.ClientName</h5>
                                    <i>@Model.Profession</i>
                                </div>
                            </div>
                            @Model.TestimonialText
                        </div>
                    </div>
                </div>
                <div class="col-lg-5" style="min-height: 400px;">
                    <div class="position-relative h-100 rounded overflow-hidden">
                        @*<img class="position-absolute w-100 h-100" src="img/testimonial.jpg" style="object-fit: cover;">*@
                        @Model.TestimonialImage
                    </div>
                </div>
            </div>
        </div>
    </div>

}